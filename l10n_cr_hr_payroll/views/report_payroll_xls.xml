<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <template id="report_payroll_xls_header">
            <table>
                <tbody>
                    <tr>
                        <td rowspan="4" colspan="13" easyfx="font: bold on, height 400; align: horiz center,vert center; border: right medium, top medium, left medium, bottom medium">
                            <span t-field="res_company.name"/>
                        </td>
                    </tr>
                    <tr>
                        <td rowspan="3" colspan="13" easyfx="font: bold on, height 300; align: horiz center; border: right medium, top medium, left medium, bottom medium">
                            <span>Payroll Report</span>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="13"></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td easyfx="font: bold on; align: horiz right">From</td>
                        <td num_format_str="DD/MM/YY">
                            <span t-esc="data['period_from']"/>
                        </td>
                        <td easyfx="font: bold on; align: horiz right">To</td>
                        <td num_format_str="DD/MM/YY" >
                            <span t-esc="data['period_to']"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="13"></td>
                    </tr>
                </tbody>
            </table>
        </template>
        <template id="report_payroll_xls">
            <div class="workbook">
                <div class="worksheet" name="Payroll" fixpages="1" wpages="1" hpages="0">
                    <t t-call="l10n_cr_hr_payroll.report_payroll_xls_header"></t>
                    <t t-set="total_nrm_hrs" t-value="0" />
                    <t t-set="total_ext_hrs" t-value="0" />
                    <t t-set="total_base" t-value="0" />
                    <t t-set="total_extra" t-value="0" />
                    <t t-set="total_extra_feriados" t-value="0" />
                    <t t-set="total_rebajo" t-value="0" />
                    <t t-set="total_otros_rebajos" t-value="0" />
                    <t t-set="total_gross" t-value="0" />
                    <t t-set="total_deduct" t-value="0" />
                    <t t-set="total_bonuses" t-value="0" />
                    <t t-set="total_rent" t-value="0" />
                    <t t-set="total_net" t-value="0" />
                    <t t-set="total_paid" t-value="0" />
                    <t t-set="allPayslip" t-value="get_payslips_by_struct(data['period_from'], data['period_to'])" />
                    <t t-foreach="allPayslip" t-as="structSlip">
                        <t t-set="subtotal_nrm_hrs" t-value="0" />
                        <t t-set="subtotal_ext_hrs" t-value="0" />
                        <t t-set="subtotal_base" t-value="0" />
                        <t t-set="subtotal_extra" t-value="0" />
                        <t t-set="subtotal_extra_feriados" t-value="0" />
                        <t t-set="subtotal_rebajo" t-value="0" />
                        <t t-set="subtotal_otros_rebajos" t-value="0" />
                        <t t-set="subtotal_gross" t-value="0" />
                        <t t-set="subtotal_deduct" t-value="0" />
                        <t t-set="subtotal_bonuses" t-value="0" />
                        <t t-set="subtotal_rent" t-value="0" />
                        <t t-set="subtotal_paid" t-value="0" />
                        <t t-set="subtotal_net" t-value="0" />
                        <table>
                            <tbody>
                                <tr>
                                    <td easyfx="font: bold on">Structure:</td>
                                    <td colspan="3" easyfx="font: bold on"><span t-esc="structSlip[0]" /></td>
                                </tr>
                            </tbody>
                        </table>
                        <table>
                            <thead>
                                <tr>
                                    <th easyfx="font: bold on; align: horiz center; border: bottom medium">ID card</th>
                                    <th colwidth="20" easyfx="font: bold on; align: horiz center; border: bottom medium">Name</th>
                                    <th colwidth="20" easyfx="font: bold on; align: horiz center; border: bottom medium">Bank Account</th>
                                    <th easyfx="font: bold on; align: horiz center; border: bottom medium">Nrm Hrs</th>
                                    <th easyfx="font: bold on; align: horiz center; border: bottom medium">Ext Hrs</th>
                                    <th easyfx="font: bold on; align: horiz center; border: bottom medium">Base</th>
                                    <th easyfx="font: bold on; align: horiz center; border: bottom medium">Extra</th>
                                    <th easyfx="font: bold on; align: horiz center; border: bottom medium">Extra Feriado</th>
                                    <th easyfx="font: bold on; align: horiz center; border: bottom medium">Rebajo</th>
                                    <th easyfx="font: bold on; align: horiz center; border: bottom medium">Otros Rebajos</th>
                                    <th easyfx="font: bold on; align: horiz center; border: bottom medium">Gross</th>
                                    <th easyfx="font: bold on; align: horiz center; border: bottom medium">Deduct.CCSS/BP</th>
                                    <th easyfx="font: bold on; align: horiz center; border: bottom medium">Bonuses</th>
                                    <th easyfx="font: bold on; align: horiz center; border: bottom medium">Rent</th>
                                    <th easyfx="font: bold on; align: horiz center; border: bottom medium">Paid</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="data_dict" t-value="get_payslips_by_employee(structSlip[1])" />
                                <t t-foreach="data_dict.keys()" t-as="employee_id">
                                    <t t-set="employee_data" t-value="data_dict[employee_id]" />
                                    <t t-set="employee" t-value="employee_data[0]" />
                                    <t t-set="payslips" t-value="employee_data[1]" />
                                    <tr>
                                        <td>
                                            <span t-field="employee.identification_id" />
                                        </td>
                                        <td>
                                            <span t-field="employee.name" />
                                        </td>
                                        <td>
                                            <t t-if="employee.bank_account_id">
                                                <span t-field="employee.bank_account_id.acc_number" />
                                            </t>
                                        </td>
                                        <td name="HN">
                                            <t t-set="nrm_hrs" t-value="get_worked_days_hours(payslips, code='HN')" />
                                            <t t-set="subtotal_nrm_hrs" t-value="subtotal_nrm_hrs+nrm_hrs" />
                                            <t t-set="total_nrm_hrs" t-value="total_nrm_hrs+nrm_hrs" />
                                            <span t-esc="formatLang(nrm_hrs, dp='Account')" />
                                        </td>
                                        <td name="HE">
                                            <t t-set="ext_hrs" t-value="get_worked_days_hours_group(payslips, code=['HE','HEF','FE','EXT-FE','EXT'])" />
                                            <t t-set="subtotal_ext_hrs" t-value="subtotal_ext_hrs+ext_hrs" />
                                            <t t-set="total_ext_hrs" t-value="total_ext_hrs+ext_hrs" />
                                            <span t-esc="formatLang(ext_hrs, dp='Account')" />
                                        </td>
                                        <td name="BASE">
                                            <t t-set="base" t-value="get_line_total(payslips, code='BASE')" />
                                            <t t-set="subtotal_base" t-value="subtotal_base+base" />
                                            <t t-set="total_base" t-value="total_base+base" />
                                            <span t-esc="formatLang(base, dp='Account')" />
                                        </td>
                                        <td name="EXT">
                                            <t t-set="extra" t-value="get_line_total_group(payslips, code=['EXT'])" />
                                            <t t-set="subtotal_extra" t-value="subtotal_extra+extra" />
                                            <t t-set="total_extra" t-value="total_extra+extra" />
                                            <span t-esc="formatLang(extra, dp='Account')" />
                                        </td>
                                        <td name="EXT">
                                            <t t-set="extra_feriados" t-value="get_line_total_group(payslips, code=['EXT-FE','FE'])" />
                                            <t t-set="subtotal_extra_feriados" t-value="subtotal_extra_feriados+extra_feriados" />
                                            <t t-set="total_extra_feriados" t-value="total_extra_feriados+extra_feriados" />
                                            <span t-esc="formatLang(extra_feriados, dp='Account')" />
                                        </td>
                                        <td name="HR">
                                            <t t-set="rebajo" t-value="get_line_total_group(payslips, code=['HR'])" />
                                            <t t-set="subtotal_rebajo" t-value="subtotal_rebajo+rebajo" />
                                            <t t-set="total_rebajo" t-value="total_rebajo+rebajo" />
                                            <span t-esc="formatLang(rebajo, dp='Account')" />
                                        </td>
                                        <td name="ORET">
                                            <t t-set="otros_rebajos" t-value="get_line_total_group(payslips, code=['OTRASDED'])" />
                                            <t t-set="subtotal_otros_rebajos" t-value="subtotal_otros_rebajos+otros_rebajos" />
                                            <t t-set="total_otros_rebajos" t-value="total_otros_rebajos+otros_rebajos" />
                                            <span t-esc="formatLang(otros_rebajos, dp='Account')" />
                                        </td>
                                        <td>
                                            <t t-set="gross" t-value="get_line_total(payslips, code='BRUTO')" />
                                            <t t-set="subtotal_gross" t-value="subtotal_gross+gross" />
                                            <t t-set="total_gross" t-value="total_gross+gross" />
                                            <span t-esc="formatLang(gross, dp='Account')" />
                                        </td>
                                        <td>
                                            <t t-set="deduct" t-value="get_line_total_group(payslips, code=['CSO'])" />
                                            <t t-set="subtotal_deduct" t-value="subtotal_deduct+deduct" />
                                            <t t-set="total_deduct" t-value="total_deduct+deduct" />
                                            <span t-esc="formatLang(deduct, dp='Account')" />
                                        </td>
                                        <td>
                                            <t t-set="bonuses" t-value="get_line_total(payslips, code='BON')" />
                                            <t t-set="subtotal_bonuses" t-value="subtotal_bonuses+bonuses" />
                                            <t t-set="total_bonuses" t-value="total_bonuses+bonuses" />
                                            <span t-esc="formatLang(bonuses, dp='Account')" />
                                        </td>
                                        <td>
                                            <t t-set="rent" t-value="get_line_total(payslips, code='RENTA')" />
                                            <t t-set="subtotal_rent" t-value="subtotal_rent+rent" />
                                            <t t-set="total_rent" t-value="total_rent+rent" />
                                            <span t-esc="formatLang(rent, dp='Account')" />
                                        </td>
                                        <td>
                                            <t t-set="net" t-value="get_line_total(payslips, code='NETO')" />
                                            <t t-set="subtotal_net" t-value="subtotal_net+net" />
                                            <t t-set="total_net" t-value="total_net+net" />
                                            <span t-esc="formatLang(net, dp='Account')" />
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="3" easyfx="font: bold on; align: horiz right">Total</td>
                                    <td easyfx="font: bold on">
                                        <span t-esc="formatLang(subtotal_nrm_hrs, dp='Account')" />
                                    </td>
                                    <td easyfx="font: bold on">
                                        <span t-esc="formatLang(subtotal_ext_hrs, dp='Account')" />
                                    </td>
                                    <td easyfx="font: bold on">
                                        <span t-esc="formatLang(subtotal_base, dp='Account')" />
                                    </td>
                                    <td easyfx="font: bold on">
                                        <span t-esc="formatLang(subtotal_extra, dp='Account')" />
                                    </td>
                                    <td easyfx="font: bold on">
                                        <span t-esc="formatLang(subtotal_extra_feriados, dp='Account')" />
                                    </td>
                                    <td easyfx="font: bold on">
                                         <span t-esc="formatLang(subtotal_rebajo, dp='Account')" />
                                    </td>
                                    <td easyfx="font: bold on">
                                        <span t-esc="formatLang(subtotal_otros_rebajos, dp='Account')" />
                                    </td>
                                    <td easyfx="font: bold on">
                                        <span t-esc="formatLang(subtotal_gross, dp='Account')" />
                                    </td>
                                    <td easyfx="font: bold on">
                                        <span t-esc="formatLang(subtotal_deduct, dp='Account')" />
                                    </td>
                                    <td easyfx="font: bold on">
                                        <span t-esc="formatLang(subtotal_bonuses, dp='Account')" />
                                    </td>
                                    <td easyfx="font: bold on">
                                        <span t-esc="formatLang(subtotal_rent, dp='Account')" />
                                    </td>
                                    <td easyfx="font: bold on">
                                        <span t-esc="formatLang(subtotal_net, dp='Account')" />
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="13"></td>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                    <table>
                        <thead>
                            <tr>
                                <th colspan="11" easyfx="font: bold on">General Total</th>
                            </tr>
                            <tr>
                                <th easyfx="font: bold on; align: horiz center; border: bottom medium"></th>
                                <th easyfx="font: bold on; align: horiz center; border: bottom medium"></th>
                                <th easyfx="font: bold on; align: horiz center; border: bottom medium"></th>
                                <th easyfx="font: bold on; align: horiz center; border: bottom medium">Nrm Hrs</th>
                                <th easyfx="font: bold on; align: horiz center; border: bottom medium">Ext Hrs</th>
                                <th easyfx="font: bold on; align: horiz center; border: bottom medium">Base</th>
                                <th easyfx="font: bold on; align: horiz center; border: bottom medium">Extra</th>
                                <th easyfx="font: bold on; align: horiz center; border: bottom medium">Extra Feriado</th>
                                <th easyfx="font: bold on; align: horiz center; border: bottom medium">Rebajo</th>
                                <th easyfx="font: bold on; align: horiz center; border: bottom medium">Otros Rebajos</th>
                                <th easyfx="font: bold on; align: horiz center; border: bottom medium">Gross</th>
                                <th easyfx="font: bold on; align: horiz center; border: bottom medium">Deduct.CCSS/BP</th>
                                <th easyfx="font: bold on; align: horiz center; border: bottom medium">Bonuses</th>
                                <th easyfx="font: bold on; align: horiz center; border: bottom medium">Rent</th>
                                <th easyfx="font: bold on; align: horiz center; border: bottom medium">Paid</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="get_totales(allPayslip)" t-as="total">
                                <tr>
                                    <td easyfx="font: bold on; align: horiz right">
                                        <span t-esc="total['title']"/>
                                    </td>
                                    <td>
                                    </td>
                                    <td>
                                    </td>
                                    <td>
                                        <span t-esc="formatLang(total['total_nrm_hrs'], dp='Account')" />
                                    </td>
                                    <td>
                                        <span t-esc="formatLang(total['total_ext_hrs'], dp='Account')" />
                                    </td>
                                    <td>
                                        <span t-esc="formatLang(total['total_base'], dp='Account')" />
                                    </td>
                                    <td>
                                        <span t-esc="formatLang(total['total_extra'], dp='Account')" />
                                    </td>
                                    <td>
                                        <span t-esc="formatLang(total['total_extra_feriados'], dp='Account')" />
                                    </td>
                                    <td>
                                        <span t-esc="formatLang(total['total_rebajo'], dp='Account')" />
                                    </td>
                                    <td>
                                        <span t-esc="formatLang(total['total_rebajo'], dp='Account')" />
                                    </td>
                                    <td>
                                        <span t-esc="formatLang(total['total_gross'], dp='Account')" />
                                    </td>
                                    <td>
                                        <span t-esc="formatLang(total['total_deduct'], dp='Account')" />
                                    </td>
                                    <td>
                                        <span t-esc="formatLang(total['total_bonuses'], dp='Account')" />
                                    </td>
                                    <td>
                                        <span t-esc="formatLang(total['total_rent'], dp='Account')" />
                                    </td>
                                    <td>
                                        <span t-esc="formatLang(total['total_net'], dp='Account')" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </template>
    </data>
</odoo>
